<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MenuItem">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="16dp"
        android:backgroundTint="@color/white"
        android:elevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/MenuImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:scaleType="fitCenter"
                android:contentDescription="Gambar Menu"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNamaMenu"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textColor="@color/biru"
                    android:text="Nama Menu"/>

                <TextView
                    android:id="@+id/tvHargaMenu"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="14sp"  android:textColor="@android:color/darker_gray"
                    android:text="Rp.0"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/btnKurang"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/img"
                android:contentDescription="Kurang"/>

            <TextView
                android:id="@+id/tvJumlah"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="16sp"
                android:text="0"/>

            <ImageView
                android:id="@+id/btnTambah"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/img_1"
                android:contentDescription="Tambah"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>